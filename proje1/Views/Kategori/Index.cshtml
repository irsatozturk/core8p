@model List<Kategori>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-light ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-dark py-2">KATEGORİ LİSTESİ</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-3">
        <div class="row pb-3">
            <div class=" text-end">
                <a asp-controller="Kategori" asp-action="kategoriOlustur" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Yeni Kategori Ekle
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Kategori Adı</th>
                    <th>Sıralama</th>
                    <th>Müdahale</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var veriler in Model.OrderBy(x => x.DisplayOrder))
                {
                    <tr>
                        <td>@veriler.Name</td>
                        <td>@veriler.DisplayOrder</td>
                        <td>
                            <div class="w-50 btn-group" role="group">
                                <a asp-controller="Kategori" asp-action="kategoriDuzenle" asp-route-id="@veriler.Id" class="btn btn-dark mx-2">
                                    <i class="bi bi-pencil-square"></i> Düzenle
                                </a>
                                @*
                            Buradaki "asp-route-id" alanları, post veri adını gönderiyor "id" şeklinde
                            "asp-route-xxx" bu yapı sabit sondaki "xxx" post get verinin adını veriyor
                            "KategoriController.cs" dosyasındaki "public IActionResult kategoriSil(int? id)"
                            fonksiyonunda parantez içindeki "id" buradan geliyor.
                            *@
                                <a asp-controller="Kategori" asp-action="kategoriSil" asp-route-id="@veriler.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Sil
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>