@model Kategori

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-light ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-dark py-2">Kategori Düzenleme Alanı</h2>
            </div>
        </div>
    </div>

    <form method="post">
        @*<input asp-for="Id" hidden />*@
        <div class="border p-3 mt4">
            <div class="mb-3 row p-1">
                <label asp-for="Name" class="p-0"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="DisplayOrder" class="p-0"></label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Düzenle</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Kategori" asp-action="Index" class="btn btn-secondary border form-control">Geri Dön</a>
                </div>
            </div>
        </div>
        <div asp-validation-summary="All"></div>
    </form>

</div>

